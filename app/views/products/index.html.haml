%table.table
  %thead
    %tr
      %th= Product.human_attribute_name :title
      %th= Product.human_attribute_name :price
      %th

  - @products.each do |product|
    %tbody
      %tr
        %td= product.title
        %td= product.price
        %td= link_to "Buy", product_purchase_path(product), method: 'POST'
